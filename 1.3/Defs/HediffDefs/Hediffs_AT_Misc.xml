<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="DiseaseBase">
    <defName>VoidToxin</defName>
    <label>void toxin</label>
    <description>"A powerful neurotoxin made out of small mechanites. Slowly neutralizing the body."</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>true</makesSickThought>
    <minSeverity>0</minSeverity>
    <initialSeverity>0.2</initialSeverity>
    <stages>
      <li>
        <label>stage 1</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>stage 2</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.40</minSeverity>
        <label>stage 3</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <label>stage 4</label>
        <capMods>
            <li>
            <capacity>Manipulation</capacity>
            <offset>-1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-1</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>60000</disappearsAfterTicks> <!-- 1 day -->
      </li>
    </comps>
  </HediffDef>
 
</Defs>